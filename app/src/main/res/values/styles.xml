<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <style name="ErrorBoxStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/holo_red_dark</item>
        <item name="android:padding">@dimen/error_message_padding</item>
        <item name="android:elevation">@dimen/error_message_elevation</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TransactionEditorSectionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#1ff70b</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">5dp</item>
    </style>


</resources>
