<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView android:layout_width="fill_parent" android:id="@+id/textViewValidationErrorMessage"
            style="@style/ErrorBoxStyle"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/linear_layout_account"
            style="@style/TransactionEditorSectionStyle">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="1">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/text_view_account"/>

               <Spinner android:id="@+id/spinner_account"
                   android:layout_width="fill_parent" android:layout_height="wrap_content"/>

           </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_category"
            style="@style/TransactionEditorSectionStyle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_category"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_view_category_name"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_view_category"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_storage_white_24dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_type"
            style="@style/TransactionEditorSectionStyle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_type"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Switch"
                    android:id="@+id/switchType"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_date"
            style="@style/TransactionEditorSectionStyle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_date"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_view_date"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_view_date"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_insert_invitation_white_24dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_amount"
            style="@style/TransactionEditorSectionStyle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_amount"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_view_amount"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_view_amount"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_insert_invitation_white_24dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_currency"
            style="@style/TransactionEditorSectionStyle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_currency"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_view_currency"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_view_currency"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_insert_invitation_white_24dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_exchange_rate"
            style="@style/TransactionEditorSectionStyle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_exchange_rate"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_view_exchange_rate"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_view_exchange_rate"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_insert_invitation_white_24dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_payment_method"
            style="@style/TransactionEditorSectionStyle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_payment_method"/>

                <Spinner android:id="@+id/spinner_payment_method"
                    android:layout_width="fill_parent" android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_note"
            style="@style/TransactionEditorSectionStyle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_note"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_view_note"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_view_note"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_insert_invitation_white_24dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>